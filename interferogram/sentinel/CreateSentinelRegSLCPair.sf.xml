<?xml version="1.0"?>
<sf:sciflo xmlns:sf="http://sciflo.jpl.nasa.gov/2006v1/sf"
        xmlns:xs="http://www.w3.org/2001/XMLSchema"
        xmlns:py="http://sciflo.jpl.nasa.gov/2006v1/py">
  <sf:flow id="CreateSentinelRegSLCPair">
    <sf:title>Create Sentinel Registered SLC Pair</sf:title>
    <sf:icon>http://sciflo.jpl.nasa.gov/sciflo/web/thumbnails/merged_data.png</sf:icon>
    <sf:description>Determine possible interferable single-scene pairs/stitched frames and try to generate registered SLC pair products.</sf:description>
    <sf:inputs>
      <context_file>_context.json</context_file>
    </sf:inputs>
    <sf:outputs>
      <slc_pairs from="@#create_rsp"/>
    </sf:outputs>

    <sf:processes>

      <sf:process id="enumerate_topsapp_cfgs">
        <sf:inputs>
          <context_file/>
        </sf:inputs>
        <sf:outputs>
          <projects/>
          <stitched/>
          <auto_bbox/>
          <rsp_ids/>
          <master_zip_urls/>
          <master_orbit_urls/>
          <slave_zip_urls/>
          <slave_orbit_urls/>
          <swathnums/>
          <bboxes/>
        </sf:outputs>
        <sf:operator>
          <sf:description></sf:description>
          <sf:op>
            <sf:binding>python:?enumerate_topsapp_cfgs.get_topsapp_cfgs_rsp</sf:binding>
          </sf:op>
        </sf:operator>
      </sf:process>
      
      <sf:process id="create_rsp">
        <sf:inputs>
          <projects from="@#previous"/>
          <stitched from="@#previous"/>
          <auto_bbox from="@#previous"/>
          <rsp_ids from="@#previous"/>
          <master_zip_urls from="@#previous"/>
          <master_orbit_urls from="@#previous"/>
          <slave_zip_urls from="@#previous"/>
          <slave_orbit_urls from="@#previous"/>
          <swathnums from="@#previous"/>
          <bboxes from="@#previous"/>
        </sf:inputs>
        <sf:outputs>
          <slc_pairs/>
        </sf:outputs>
        <sf:operator>
          <sf:description></sf:description>
          <sf:op>
            <sf:binding job_queue="jobs_processed" async="true">map:python:?parpython.create_rsp_job</sf:binding>
          </sf:op>
        </sf:operator>
      </sf:process>

    </sf:processes>
  </sf:flow>
</sf:sciflo>
